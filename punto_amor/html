<body>

  <h1 id="mainTitle">Â¿Quieres ser mi amorcito?</h1>

  <div class="button-container" id="buttons">
    <button id="noButton" onclick="moveNoButton()">No</button>
    <button id="yesButton" onclick="showLove()">Yes ðŸ’–</button>
  </div>

  <div id="loveMessage">Te amo mi vida</div>

  <script>
    const noButton = document.getElementById('noButton');
    const yesButton = document.getElementById('yesButton');
    const buttons = document.getElementById('buttons');
    const mainTitle = document.getElementById('mainTitle');
    const loveMessage = document.getElementById('loveMessage');
    let clickedNoOnce = false;

    function moveNoButton() {
      const maxX = window.innerWidth - noButton.offsetWidth;
      const maxY = window.innerHeight - noButton.offsetHeight;

      const newX = Math.floor(Math.random() * maxX);
      const newY = Math.floor(Math.random() * maxY);

      noButton.style.left = `${newX}px`;
      noButton.style.top = `${newY}px`;

      if (!clickedNoOnce) {
        yesButton.style.display = 'block';
        clickedNoOnce = true;
      }
    }

    function showLove() {
      buttons.style.display = 'none';
      mainTitle.style.display = 'none';
      loveMessage.style.display = 'block';
    }
  </script>

</body>
