    }

    button {
      position: absolute;
      padding: 12px 24px;
      font-size: 1rem;
      border: none;
      border-radius: 10px;
      cursor: pointer;
      transition: 0.2s;
    }

    #noButton {
      background-color: orange;
      z-index: 2;
    }

    #yesButton {
      background-color: #2ecc71;
      color: white;
      display: none;
